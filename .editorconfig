# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2

[*.{js,jsx,ts,tsx,json}]
indent_style = space
indent_size = 2

[*.{css,scss}]
indent_style = space
indent_size = 2

[*.{html,xml}]
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4

[*.{java,cpp,c,h,hpp}]
indent_style = space
indent_size = 4